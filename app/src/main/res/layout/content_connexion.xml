<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.inglow.mycoachsuprem.Connexion"
    android:background="#dedede">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:id="@+id/tvemail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/idemail"
        android:background="@drawable/cadre"
        android:layout_below="@+id/tvemail"
        android:layout_alignEnd="@+id/idconnexion"
        android:textAlignment="center"
        android:text="admin@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe"
        android:id="@+id/txtmdp"
        android:layout_below="@+id/idemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/idmdp"
        android:autoText="false"
        android:background="@drawable/cadre"
        android:layout_below="@+id/txtmdp"
        android:layout_alignStart="@+id/idemail"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="123" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/idannuler"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/idmdp"
        android:layout_alignStart="@+id/idmdp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:id="@+id/idconnexion"
        android:layout_alignTop="@+id/idannuler"
        android:layout_toEndOf="@+id/tvemail" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvemail"
        android:src="@drawable/logocs"
        android:layout_alignParentStart="true" />

</RelativeLayout>
